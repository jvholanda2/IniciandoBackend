{% extends "layout.njk" %}

{% block head %}
<title>Sobre - {{about.name}}</title>
{% endblock %}

{% block content %}

<div id="wrapper">
    <img src="https://avatars1.githubusercontent.com/u/49560042?s=460&u=525de05c220977cc6c945da605fa1948bf3fa41e&v=4" alt="Foto de Perfil">
    <h1>{{about.name}}</h1>
    <h2>{{about.role}}</h2>
    <p>{{about.description}} </p>
</div>

<div id="links-footer" class="links">
    {% for link in about.links %}
        <a href="{{link.url}}" target="_blank">{{link.name}}</a>
    {% endfor %}
</div>

{% endblock %}
